<form action="/api/events/{{event.id}}/feedbacks" method="post" role="form" id="feedback-form">
    <div class="form-group">
        <label for="question-well">What went well?</label>
        <input
            class="form-control"
            type="text"
            name="well"
            id="question-well"
            autofocus
            value="{{#if userFeedback}}{{userFeedback.answers.well}}{{/if}}"
        />
    </div>

    <div class="form-group">
        <label for="question-better">What could have been done better?</label>
        <input
            class="form-control"
            type="text"
            name="better"
            id="question-better"
            value="{{#if userFeedback}}{{userFeedback.answers.better}}{{/if}}"
        />
    </div>

    <div class="checkbox">
        <label class="checkbox-inline">
            <input
                type="checkbox"
                name="volunteer"
                id="question-volunteer"
                {{#if userFeedback}}
                    {{#if userFeedback.answers.volunteer}}checked{{/if}}
                {{/if}}
            />
            I volunteer for next event?
        </label>
    </div>

    <div>
        <button type="submit" class="btn btn-success">Leave feedback</button>

        {{#if hasFeedback}}
            <a href="/api/events/{{event.id}}"
                class="btn btn-danger"
                id="button-remove-feedback">
                Remove feedback
            </a>
        {{/if}}
    </div>
</form>
